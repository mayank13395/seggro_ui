<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/logo_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:text="Material is Good"
    android:textSize="30sp"

    android:orientation="horizontal"
    android:background="@drawable/new_oldchat_bg"
    android:textColor="@android:color/white">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:paddingTop="50dp"
        android:paddingLeft="35dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload the image"
            android:textColor="#fff"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="Send your affected crop image "
            android:textSize="15sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="and talk with our experts."
            android:textSize="15sp"/>
    </LinearLayout>

  <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"

      >
      <ImageView
          android:id="@+id/imagecorn"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
         android:paddingLeft="35dp"
          android:paddingRight="20dp"

          android:src="@drawable/corn"/>
