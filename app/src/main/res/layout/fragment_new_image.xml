<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="50dp"
    android:weightSum="10"

    tools:context=".ui.main.PlaceholderFragment">

<!--    <RelativeLayout-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginTop="50dp"-->

<!--        >-->






              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="1.3"

                  android:paddingTop="10dp"
                  android:paddingLeft="30dp"

                  android:orientation="vertical">
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Upload or Select the image"
                      android:textColor="#000"
                      android:textSize="17dp"/>

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Send your affected crop image"
                      android:textColor="#000"
                      android:textSize="14dp"/>

              </LinearLayout>

              <LinearLayout

                  android:layout_width="wrap_content"

                  android:layout_height="00dp"
                  android:layout_weight="3.6"
                  android:layout_gravity="center_vertical"

                  android:orientation="horizontal">

                  <LinearLayout
                      android:layout_width="wrap_content"
                      android:layout_height="210dp"
                      android:layout_weight="5"
                      android:onClick="openCaemra"
                      android:orientation="vertical"
                      tools:ignore="OnClick">
                      <ImageView
                          android:id="@+id/imagecamera"
                          android:layout_width="wrap_content"
                          android:layout_height="160dp"
                          android:src="@drawable/cam"/>

                      <TextView
                          android:layout_width="match_parent"
                          android:layout_height="40dp"
                          android:text="Camera"
                          android:textSize="20dp"

                          android:layout_centerHorizontal="true"
                          android:gravity="center"
                          />
                  </LinearLayout>
                  <LinearLayout
                      android:layout_width="wrap_content"
                      android:layout_height="210dp"
                      android:layout_weight="5"
                      android:onClick="openGallery"
                      android:orientation="vertical"
                      tools:ignore="OnClick">
                      <ImageView
                          android:id="@+id/galleryimage"
                          android:layout_width="wrap_content"
                          android:layout_height="160dp"
                          android:src="@drawable/upload"/>
                      <TextView
                          android:layout_width="match_parent"
                          android:layout_height="40dp"
                          android:text="Gallery"
                          android:textSize="20dp"

                          android:layout_centerHorizontal="true"
                          android:gravity="center"
                          />

                  </LinearLayout>









              </LinearLayout>
              <LinearLayout
                  android:layout_weight="2.2"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:gravity="center"
                  android:layout_margin="0dp"
                  android:orientation="horizontal">
                  <ImageView
                      android:layout_gravity="center"
                      android:id="@+id/centernewimg"
                      android:layout_width="120dp"
                      android:layout_height="100dp"
                      android:scaleType="centerInside"


                      android:src="@drawable/corn"/>
              </LinearLayout>
              <!--                  </LinearLayout>-->
              <LinearLayout
                  android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_height="0dp"
                  android:layout_alignParentBottom="true"
                android:layout_weight="3"
                  android:gravity="center_vertical"

                  >

                  <ImageView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_weight="6"

                      android:src="@drawable/weather"/>

                  <LinearLayout

                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"


                      android:layout_weight="6"
                      android:orientation="vertical"
                      >
                      <TextView
                          android:id="@+id/weatherTemp"

                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"

                          android:text="27c"
                          android:textSize="25dp"/>
                      <TextView
                          android:id="@+id/todayDate"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="New Delhi, 29oct"
                          android:textSize="15dp"/>
                      <TextView
                          android:id="@+id/weatherDescription"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Foggy in the morning and afternoon"

                          android:textSize="15dp"/>


                  </LinearLayout>






              </LinearLayout>
          </LinearLayout>











